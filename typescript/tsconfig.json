{
  "compilerOptions": {
    // "incremental": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    // "noEmit": true,
    // "allowJs": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": [
      "ES2023",
      "ES6"
    ],
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "target": "ES2015",
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
  },
  "include": [
    "**/*.ts"
  ],
}
