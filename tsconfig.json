{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}